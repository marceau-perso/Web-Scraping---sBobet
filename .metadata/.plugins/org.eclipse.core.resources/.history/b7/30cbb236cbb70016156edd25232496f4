package MODEL;

public class Market {
	
	private String market = null;

	
	
	public Market(String marketM)
	{
		market = marketM;

		
	}
	public Bet(String matchID, String marketM,String oddsH, String oddsA )
	{
		match = matchID;
		market = marketM;
		odds1 = oddsH;
		odds2 = oddsA;
		
	}
	
	public String getMatch(){
		return match;
	}
	public String getMarket(){
		return market;
	}
	public String getOdds1(){
		return odds1;
	}
	public String getOdds2(){
		return odds2;
	}
	public String getOddsD(){
		return oddsD;
	}
	public String toString(){
		if(oddsD.equals(null)){
			return "Match "+match+" ; odds1 "+odds1+" ; odds2 "+odds2;
		}
		else{
			return "Match "+match+" ; odds1 "+odds1+" ; odds2 "+odds2+" ; oddsD "+oddsD;
		}
		
	}

}
